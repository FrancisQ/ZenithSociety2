@model ZenithWebsite.Models.ZenithSocietyModels.Event

@{
    ViewData["Title"] = "Create Event";
}

<h2>Create</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Event</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="ActivityId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="ActivityId" class ="form-control" asp-items="ViewBag.ActivityId"></select>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="FromDate" class="col-md-2 control-label"></label>
            <div class='col-md-10 input-width-limiter'>
                <!-- input-group(style) date(makes icon clickable) datetimepicker(input clickable and popup) -->
                <div class='input-group date datetimepicker'>
                    <input asp-for="FromDate" class="form-control" placeholder="M/D/YYYY HH:MM AM" />
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
                <span asp-validation-for="FromDate" class="text-danger" />
            </div>
        </div>
                        
        <div class="form-group">
            <label asp-for="ToDate" class="col-md-2 control-label"></label>
            <div class="col-md-10 input-width-limiter">
                <div class="input-group date datetimepicker">
                    <input asp-for="ToDate" class="form-control" placeholder="M/D/YYYY HH:MM AM" />
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
            </div>
            <span asp-validation-for="ToDate" class="text-danger" />
        </div>

        <div class="form-group">
            <label asp-for="IsActive" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <div class="checkbox">
                    <input asp-for="IsActive" />
                </div>
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}